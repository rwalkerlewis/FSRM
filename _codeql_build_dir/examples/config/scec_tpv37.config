# =============================================================================
# SCEC TPV37: Bimaterial Interface - Rate-State
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv36_37docs.html
#
# Same geometry as TPV36 but with rate-state friction.
# =============================================================================

[SIMULATION]
name = scec_tpv37
description = SCEC TPV37 - Bimaterial Rate-State
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.001
output_frequency = 100
output_dir = output/scec_tpv37
output_format = HDF5

[GRID]
nx = 301
ny = 151
nz = 151
Lx = 30000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

# Bimaterial structure
[MATERIAL]
type = BIMATERIAL

[MATERIAL1]
region = y_negative
density = 2670.0
vp = 6000.0
vs = 3464.0

[MATERIAL2]
region = y_positive
density = 2500.0
vp = 4800.0
vs = 2771.0

[FAULT1]
name = bimaterial_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 30000.0
width = 15000.0
center = 15000.0, 0.0, 7500.0

friction_model = RATE_STATE_AGING
reference_friction = 0.6
reference_velocity = 1.0e-6
direct_effect_a = 0.008
evolution_effect_b = 0.012
state_evolution_distance = 0.02

normal_stress = -120.0e6
shear_stress_along_strike = 75.0e6

nucleation_type = TIME_WEAKENING
nucleation_center = 15000.0, 0.0, 7500.0
nucleation_radius = 3000.0
nucleation_time = 0.5

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

[RECEIVER1]
type = FAULT
location = 0.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER2]
type = FAULT
location = 7500.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER3]
type = FAULT
location = 22500.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER4]
type = BODY
location = 15000.0, -3000.0, 0.0
output_fields = velocity, displacement

[RECEIVER5]
type = BODY
location = 15000.0, 3000.0, 0.0
output_fields = velocity, displacement

[SOLVER]
method = EXPLICIT
cfl = 0.5
