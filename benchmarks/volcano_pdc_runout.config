# =============================================================================
# Volcano Benchmark: Pyroclastic Density Current Runout
# =============================================================================
#
# Benchmark for verifying PDC model against:
#   - Laboratory flume experiments (Dade & Huppert, 1996)
#   - Field observations from Montserrat, Merapi, Unzen
#   - TITAN2D model comparisons
#
# Test case: Column collapse PDC on conical volcano
#
# Verification metrics:
#   - Runout distance within 15% of expected
#   - Peak dynamic pressure at reference points
#   - Deposit thickness distribution
#   - Arrival time at monitoring stations
#
# References:
#   Dade, W.B. & Huppert, H.E. (1996). Emplacement of the Taupo ignimbrite 
#   by a dilute turbulent flow. Nature, 381, 509-512.
#   Denlinger, R.P. & Iverson, R.M. (2001). Flow of variably fluidized 
#   granular masses across three-dimensional terrain. J. Geophys. Res., 
#   106, 553-566.
# =============================================================================

[SIMULATION]
name = PDC Runout Benchmark
type = VOLCANIC_PDC
end_time = 1200.0           # 20 minutes
dt_initial = 0.1
dt_max = 1.0
output_frequency = 50

[VOLCANO]
enable_pdc = true
enable_eruption_column = true
enable_magma_chamber = false
enable_tephra = false

[PDC_SOURCE]
type = COLUMN_COLLAPSE
collapse_height_m = 5000.0
mass_flux_kg_s = 1e8
initial_velocity_m_s = 50.0
initial_temperature_K = 773.0    # 500Â°C
particle_concentration = 0.01    # 1% volume fraction
particle_size_m = 5e-4           # 0.5 mm mean
particle_density_kg_m3 = 2500.0
source_radius_m = 500.0

[TOPOGRAPHY]
type = CONICAL_VOLCANO
summit_height_m = 2500.0
base_radius_m = 15000.0
crater_radius_m = 500.0
slope_degrees = 10.0

[PHYSICS]
drag_coefficient = 0.01
entrainment_coefficient = 0.1
sedimentation_velocity_m_s = 0.5
basal_friction_coefficient = 0.05

[GRID]
x_min_m = -20000.0
x_max_m = 20000.0
y_min_m = -20000.0
y_max_m = 20000.0
dx_m = 100.0
dy_m = 100.0

[VERIFICATION]
# Expected runout on different azimuths
expected_runout_downslope_km = 12.0
expected_runout_crossslope_km = 8.0
runout_tolerance_percent = 15.0

# Dynamic pressure at reference points
point_1_distance_km = 5.0
point_1_expected_dyn_pressure_kPa = 15.0
point_2_distance_km = 10.0
point_2_expected_dyn_pressure_kPa = 3.0
pressure_tolerance_percent = 30.0

# Arrival times
arrival_5km_expected_s = 120.0
arrival_10km_expected_s = 300.0
time_tolerance_percent = 20.0

# Deposit
expected_deposit_thickness_5km_m = 2.0
deposit_tolerance_percent = 50.0
