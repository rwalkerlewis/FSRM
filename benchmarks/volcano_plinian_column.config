# =============================================================================
# Volcano Benchmark: Plinian Eruption Column
# =============================================================================
#
# Benchmark for verifying eruption column dynamics against Woods (1988)
# analytical solutions and IAVCEI community benchmarks.
#
# Test case: VEI-5 Plinian eruption with 25 km column height
#
# Verification metrics:
#   - Column height within 10% of expected
#   - Mass entrainment rate matches Woods model
#   - Neutral buoyancy level within 15% of expected
#   - No premature column collapse
#
# Reference:
#   Woods, A.W. (1988). The fluid dynamics and thermodynamics of eruption 
#   columns. Bull. Volcanol., 50, 169-193.
# =============================================================================

[SIMULATION]
name = Plinian Column Benchmark
type = VOLCANIC
end_time = 1800.0           # 30 minutes
dt_initial = 0.1
output_frequency = 10

[VOLCANO]
enable_magma_chamber = true
enable_conduit_flow = true
enable_eruption_column = true
enable_pdc = false
enable_tephra = false
enable_deformation = false
enable_seismicity = false

[MAGMA_CHAMBER]
depth_m = 5000.0
volume_km3 = 20.0
semi_axis_a_m = 2500.0
semi_axis_b_m = 2500.0
semi_axis_c_m = 1500.0
initial_pressure_MPa = 180.0
initial_temperature_C = 850.0
overpressure_MPa = 15.0

[MAGMA]
composition = DACITE
SiO2_wt = 65.0
Al2O3_wt = 16.0
FeO_wt = 4.0
MgO_wt = 2.0
CaO_wt = 5.0
Na2O_wt = 4.0
K2O_wt = 2.5
H2O_total_wt = 5.0
CO2_total_wt = 0.05
SO2_total_wt = 0.1
temperature_C = 850.0
crystal_fraction = 0.35

[CONDUIT]
length_m = 5000.0
radius_base_m = 30.0
radius_vent_m = 50.0

[ERUPTION_COLUMN]
type = PLINIAN
mass_eruption_rate_kg_s = 5e7
exit_velocity_m_s = 200.0
exit_temperature_K = 1123.0
gas_fraction_at_vent = 0.95
vent_radius_m = 50.0
particle_size_m = 1e-3

[ATMOSPHERE]
surface_temperature_K = 288.0
tropopause_height_m = 11000.0
stratosphere_temperature_K = 220.0
lapse_rate_K_per_km = 6.5

[VERIFICATION]
expected_column_height_km = 25.0
height_tolerance_percent = 10.0
expected_NBL_height_km = 20.0
NBL_tolerance_percent = 15.0
column_should_collapse = false

# Entrainment model verification
expected_entrainment_coefficient = 0.09
entrainment_tolerance = 0.02
