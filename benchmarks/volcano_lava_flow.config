# =============================================================================
# Volcano Benchmark: Lava Flow Propagation
# =============================================================================
#
# Benchmark for verifying lava flow model against:
#   - Analytical spreading solutions (Huppert, 1982)
#   - Harris & Rowland (2001) thermal model validation
#   - Crisci et al. (2004) cellular automata comparison
#
# Test case: Basaltic lava flow on uniform 5° slope
#
# Verification metrics:
#   - Flow length within 15% of expected
#   - Flow width within 20% of expected
#   - Temperature decay rate within 10%
#   - Crust formation timing
#
# References:
#   Huppert, H.E. (1982). Flow and instability of viscous gravity currents 
#   on a slope. Nature, 300, 427-429.
#   Harris, A.J.L. & Rowland, S.K. (2001). FLOWGO: A kinematic thermo-rheological 
#   model for lava flowing in a channel. Bull. Volcanol., 63, 20-44.
# =============================================================================

[SIMULATION]
name = Lava Flow Benchmark
type = VOLCANIC_LAVA_FLOW
end_time = 86400.0          # 24 hours
dt_initial = 10.0
dt_max = 60.0
output_frequency = 100

[VOLCANO]
enable_lava_flow = true
enable_magma_chamber = false
enable_conduit_flow = false
enable_deformation = false

[MAGMA]
composition = BASALT
SiO2_wt = 50.0
Al2O3_wt = 14.0
FeO_wt = 11.0
MgO_wt = 8.0
CaO_wt = 11.0
Na2O_wt = 2.5
K2O_wt = 0.5
H2O_total_wt = 0.3
temperature_C = 1150.0
crystal_fraction = 0.05

[LAVA_SOURCE]
x_m = 0.0
y_m = 0.0
z_m = 1000.0               # Vent elevation
effusion_rate_m3_s = 20.0  # m³/s DRE
temperature_K = 1423.0      # 1150°C
initial_thickness_m = 3.0

[TOPOGRAPHY]
type = UNIFORM_SLOPE
slope_degrees = 5.0
slope_direction_degrees = 180.0   # Flow goes southward

[RHEOLOGY]
model = TEMPERATURE_DEPENDENT
reference_viscosity_Pa_s = 100.0
activation_energy_J_mol = 200000.0
yield_strength_Pa = 1000.0

[THERMAL]
emissivity = 0.95
convective_heat_transfer_W_m2_K = 50.0
crust_growth_rate_m_s_half = 0.001

[GRID]
x_min_m = -5000.0
x_max_m = 5000.0
y_min_m = -15000.0
y_max_m = 1000.0
dx_m = 50.0
dy_m = 50.0

[VERIFICATION]
# Expected results after 24 hours
expected_flow_length_km = 8.0
length_tolerance_percent = 15.0
expected_flow_width_m = 200.0
width_tolerance_percent = 20.0
expected_area_km2 = 1.5
area_tolerance_percent = 20.0

# Thermal verification
expected_surface_temp_at_10km_C = 400.0
temp_tolerance_C = 100.0
expected_crust_thickness_at_vent_m = 0.5
crust_tolerance_m = 0.2
