# =============================================================================
# SCEC TPV11: Normal Faulting
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv11docs.html
#
# Normal fault mechanism with dip-slip motion.
# Tests hanging wall/footwall asymmetry effects.
# =============================================================================

[SIMULATION]
name = scec_tpv11
description = SCEC TPV11 - Normal Faulting
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv11
output_format = HDF5

[GRID]
nx = 301
ny = 151
nz = 151
Lx = 30000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = normal_fault
type = NORMAL
geometry = PLANAR
strike = 0.0
dip = 60.0
length = 30000.0
width = 17320.5
center = 15000.0, 0.0, 7500.0

# Friction law
friction_model = SLIP_WEAKENING
static_friction = 0.570
dynamic_friction = 0.200
Dc = 0.50

# Initial stress (normal fault regime)
normal_stress = -120.0e6
shear_stress_along_dip = 55.0e6
shear_stress_along_strike = 0.0

# Nucleation
nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 15000.0, 0.0, 10000.0
nucleation_radius = 1500.0
nucleation_shear_stress = 70.0e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Receivers on hanging wall
[RECEIVER1]
type = BODY
location = 0.0, 3000.0, 0.0
output_fields = velocity, displacement

[RECEIVER2]
type = BODY
location = 0.0, 6000.0, 0.0
output_fields = velocity, displacement

# Receivers on footwall
[RECEIVER3]
type = BODY
location = 0.0, -3000.0, 0.0
output_fields = velocity, displacement

[RECEIVER4]
type = BODY
location = 0.0, -6000.0, 0.0
output_fields = velocity, displacement

# On-fault receivers
[RECEIVER5]
type = FAULT
location = 0.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER6]
type = FAULT
location = 6000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[SOLVER]
method = EXPLICIT
cfl = 0.5
