# ==============================================================================
# Historical-inspired Example: Project Gasbuggy (1967) - Site Geology + Geography
# ==============================================================================
# What this example focuses on:
# - **Geology**: a simplified 3-layer stratigraphic model (overburden / target / basement)
#   represented as a Gmsh mesh with 3 physical volumes.
# - **Geography**: WGS84 (lat/lon) input coordinates transformed to a metric model CRS
#   (UTM) and optionally to a local coordinate frame centered on Ground Zero.
#
# What this example is NOT:
# - A calibrated reproduction of Gasbuggy engineering details.
# - A validated nuclear source simulation (use as a starting point for such runs).
#
# Mesh:
# - This repo includes a small demonstration mesh:
#     meshes/historical/gasbuggy_layered_3d.msh
#   with physical volumes: "overburden", "target", "basement"
# ==============================================================================

[SIMULATION]
name = historical_gasbuggy_1967_site_geology
description = Gasbuggy-inspired site geology (layered) with geographic CRS handling

start_time = 0.0
end_time = 86400.0
dt_initial = 3600.0
dt_min = 60.0
dt_max = 21600.0
max_timesteps = 2000
output_frequency = 10
output_format = VTK

fluid_model = SINGLE_COMPONENT
solid_model = ELASTIC

enable_geomechanics = false
enable_thermal = false

[GRID]
mesh_type = GMSH
mesh_file = meshes/historical/gasbuggy_layered_3d.msh
use_unstructured = true

# Map Gmsh physical volumes -> material sections
gmsh_material_mapping = overburden:ROCK_OVERBURDEN, target:ROCK_TARGET, basement:ROCK_BASEMENT

# ------------------------------------------------------------------------------
# Geographic coordinate handling (approximate location; for demonstration only)
# ------------------------------------------------------------------------------
# Input coordinates: WGS84 lon/lat
input_crs = EPSG:4326

# Model CRS: UTM Zone 13N (meters). Gasbuggy is in New Mexico (UTM13 is typical).
model_crs = EPSG:32613

# Use local coordinates centered on the approximate ground zero.
# local_origin_x = longitude, local_origin_y = latitude
use_local_coordinates = true
local_origin_x = -107.206
local_origin_y = 36.918
local_origin_z = 0.0

[ROCK_OVERBURDEN]
name = Overburden_Shale
porosity = 0.06
permeability_x = 0.0001 mD
permeability_y = 0.0001 mD
permeability_z = 0.00001 mD
youngs_modulus = 12 GPa
poisson_ratio = 0.28
density = 2550 kg/m3
biot_coefficient = 0.9

[ROCK_TARGET]
name = Target_Sandstone
porosity = 0.10
permeability_x = 0.05 mD
permeability_y = 0.05 mD
permeability_z = 0.01 mD
youngs_modulus = 18 GPa
poisson_ratio = 0.24
density = 2450 kg/m3
biot_coefficient = 0.8

[ROCK_BASEMENT]
name = Basement_Crystalline
porosity = 0.005
permeability_x = 1e-6 mD
permeability_y = 1e-6 mD
permeability_z = 1e-7 mD
youngs_modulus = 55 GPa
poisson_ratio = 0.25
density = 2700 kg/m3
biot_coefficient = 0.6

[FLUID]
type = SINGLE_PHASE
density = 950 kg/m3
viscosity = 0.3 cP
compressibility = 8e-10 1/Pa

# "Shot point" as an observation well (coordinates in WGS84; transformed at runtime)
[WELL1]
name = GZ
type = OBSERVATION
x = -107.206
y = 36.918
z = -1292.0
control_mode = BHP
target_value = 30.0 MPa

[OUTPUT]
format = VTK
path = output/historical_gasbuggy_site
frequency = 10
pressure = true
displacement = false

