# =============================================================================
# SCEC TPV30: Heterogeneous Initial Stress
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv30docs.html
#
# Dynamic rupture with spatially heterogeneous initial stress field.
# Tests effects of stress heterogeneity on rupture complexity.
# =============================================================================

[SIMULATION]
name = scec_tpv30
description = SCEC TPV30 - Heterogeneous Stress
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv30
output_format = HDF5

[GRID]
nx = 301
ny = 151
nz = 151
Lx = 30000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 30000.0
width = 15000.0
center = 15000.0, 0.0, 7500.0

friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

# Heterogeneous stress field
stress_model = HETEROGENEOUS_STOCHASTIC
base_normal_stress = -120.0e6
base_shear_stress = 70.0e6

# Stochastic heterogeneity parameters
random_seed = 12345
correlation_length_along_strike = 2000.0
correlation_length_along_dip = 2000.0
shear_stress_std = 8.0e6
normal_stress_std = 5.0e6

# Strength heterogeneity
enable_strength_heterogeneity = true
static_friction_std = 0.05
Dc_std = 0.05

# Nucleation
nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 15000.0, 0.0, 7500.0
nucleation_radius = 1500.0
nucleation_shear_stress = 81.6e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

[RECEIVER1]
type = FAULT
location = 0.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, normal_stress

[RECEIVER2]
type = FAULT
location = 6000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, normal_stress

[RECEIVER3]
type = FAULT
location = 12000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, normal_stress

[RECEIVER4]
type = FAULT
location = 18000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, normal_stress

[RECEIVER5]
type = FAULT
location = 24000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, normal_stress

[SOLVER]
method = EXPLICIT
cfl = 0.5
