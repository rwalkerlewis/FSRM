# =============================================================================
# SCEC TPV12 Benchmark Configuration
# 60-Degree Dipping Normal Fault with Slip-Weakening
# =============================================================================
#
# Reference: SCEC Code Verification Project
#            https://strike.scec.org/cvws/tpv12_13docs.html
#
# Domain: 3D elastic half-space
# Fault: 30 km × 15 km, 60° dipping normal fault
# Friction: Linear slip-weakening
# Tests: Hanging wall / footwall asymmetry, free surface effects
#
# =============================================================================

[SIMULATION]
name = scec_tpv12
description = SCEC TPV12 - 60° Dipping Normal Fault (Slip-Weakening)
dimension = 3
physics = ELASTODYNAMICS
solid_model = ELASTIC

# Time control
start_time = 0.0
end_time = 12.0
dt_initial = 0.0005
dt_min = 1.0e-7
dt_max = 0.005
adaptive_timestepping = true

# CFL condition
cfl_number = 0.4

# Output
output_dir = output/scec_tpv12
output_format = HDF5
output_frequency = 200
checkpoint_frequency = 2000

[GRID]
# 3D domain
nx = 300
ny = 300
nz = 150

# Domain size (meters)
Lx = 60000.0
Ly = 60000.0
Lz = 30000.0

# Grid spacing: 200 m
dx = 200.0
dy = 200.0
dz = 200.0

[ROCK]
# Material properties
density = 2670.0
p_wave_velocity = 6000.0
s_wave_velocity = 3464.0
youngs_modulus = 32.04e9
poissons_ratio = 0.25
shear_modulus = 32.04e9

[FAULT1]
name = normal_fault
type = NORMAL

# Geometry - 60° dipping fault
x = 30000.0
y = 30000.0
z = -7500.0
strike = 0.0
dip = 60.0
rake = -90.0
length = 30000.0
width = 15000.0

# Slip-weakening friction
friction_law = SLIP_WEAKENING
static_friction = 0.760
dynamic_friction = 0.448
slip_weakening_dc = 0.50
cohesion = 0.2e6

# Initial stress state
# Extensional regime favoring normal faulting
initial_sigma_xx = -60.0e6
initial_sigma_yy = -60.0e6
initial_sigma_zz = -120.0e6
initial_sigma_xz = 0.0

# Nucleation zone
nucleation_type = FORCED
nucleation_center_x = 30000.0
nucleation_center_z = -10000.0
nucleation_size = 3000.0

[BC1]
type = FREE_SURFACE
location = ZMAX

[BC2]
type = ABSORBING
location = XMIN
method = PML
pml_thickness = 3000.0

[BC3]
type = ABSORBING
location = XMAX
method = PML
pml_thickness = 3000.0

[BC4]
type = ABSORBING
location = YMIN
method = PML
pml_thickness = 3000.0

[BC5]
type = ABSORBING
location = YMAX
method = PML
pml_thickness = 3000.0

[BC6]
type = ABSORBING
location = ZMIN
method = PML
pml_thickness = 3000.0

# Fault output points
[RECEIVER1]
name = flt_st000dp045
location = 30000.0, 30000.0, -4500.0
output_fields = slip_rate, slip, traction

[RECEIVER2]
name = flt_st000dp075
location = 30000.0, 30000.0, -7500.0
output_fields = slip_rate, slip, traction

[RECEIVER3]
name = flt_st000dp120
location = 30000.0, 30000.0, -12000.0
output_fields = slip_rate, slip, traction

# Surface receivers - hanging wall
[RECEIVER4]
name = hw_st000dp000
location = 35000.0, 30000.0, 0.0
output_fields = velocity, displacement

# Surface receivers - footwall
[RECEIVER5]
name = fw_st000dp000
location = 25000.0, 30000.0, 0.0
output_fields = velocity, displacement

[SOLVER]
method = EXPLICIT
time_integration = ADER_DG
polynomial_order = 4
