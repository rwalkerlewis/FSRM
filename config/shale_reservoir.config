# Shale Reservoir Configuration
# Typical properties for unconventional shale gas/oil reservoir

[SIMULATION]
start_time = 0.0
end_time = 31536000.0                 # 1 year
dt_initial = 86400.0                  # 1 day
dt_min = 3600.0                       # 1 hour
dt_max = 604800.0                     # 1 week
max_timesteps = 1000

output_frequency = 10
output_format = VTK
enable_checkpointing = true
checkpoint_frequency = 50

rtol = 1.0e-6
atol = 1.0e-8
max_nonlinear_iterations = 100
max_linear_iterations = 2000

fluid_model = BLACK_OIL
solid_model = VISCOELASTIC            # Shale exhibits creep

enable_geomechanics = true
enable_thermal = false
enable_fractures = true               # Hydraulic fractures
enable_particle_transport = true      # Proppant transport
enable_faults = false
enable_tidal_forces = false
adaptive_timestepping = true

[GRID]
nx = 60
ny = 30
nz = 10

# Domain: 1.5 km x 750 m x 60 m
Lx = 1500.0
Ly = 750.0
Lz = 60.0

use_unstructured = false

[ROCK]
# Typical shale properties
porosity = 0.05                       # Low porosity (5%)
permeability_x = 0.0001               # 0.1 microDarcy (very tight)
permeability_y = 0.0001
permeability_z = 0.00001              # Lower vertical permeability

compressibility = 5.0e-10             # Stiffer rock

# Mechanical properties - shale
youngs_modulus = 25.0e9               # 25 GPa (stiffer than sandstone)
poisson_ratio = 0.20                  # Lower Poisson's ratio
density = 2400.0                      # kg/m³
biot_coefficient = 0.7                # Lower due to low porosity

# Viscoelastic properties - shale creeps over time
relaxation_time = 86400.0             # 1 day
viscosity = 5.0e18                    # Pa·s

# Thermal properties
thermal_conductivity = 1.8            # W/(m·K) - lower for shale
heat_capacity = 800.0                 # J/(kg·K)
thermal_expansion = 8.0e-6            # 1/K

# Fracture properties - shale is brittle
fracture_toughness = 0.8e6            # Pa·m^0.5 - lower than sandstone
fracture_energy = 50.0                # J/m²

[FLUID]
# Light oil / gas condensate
density = 750.0                       # kg/m³ (light oil)
viscosity = 0.002                     # Pa·s (2 cP)
compressibility = 1.5e-9              # 1/Pa

# Black oil properties
oil_density_std = 750.0
gas_density_std = 0.85                # Rich gas
water_density_std = 1020.0            # Formation brine

oil_viscosity = 0.002                 # 2 cP (light oil)
gas_viscosity = 0.00001               # 0.01 cP
water_viscosity = 0.0015              # 1.5 cP (brine)

solution_GOR = 500.0                  # High GOR (500 scf/stb)
