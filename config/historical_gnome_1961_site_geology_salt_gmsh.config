# ==============================================================================
# Historical-inspired Example: Project Gnome (1961) - Salt Geology + Geography
# ==============================================================================
# What this example focuses on:
# - **Geology**: a simplified salt host rock represented as a Gmsh volume
#   ("salt_dome") with halite-like properties.
# - **Geography**: coordinate system transformation (WGS84 -> UTM) and local origin.
#
# Mesh:
#   meshes/historical/gnome_salt_3d.msh
# Physical volumes:
#   - "salt_dome"
# ==============================================================================

[SIMULATION]
name = historical_gnome_1961_site_geology
description = Gnome-inspired salt host model with geographic CRS handling

start_time = 0.0
end_time = 86400.0
dt_initial = 3600.0
dt_min = 60.0
dt_max = 21600.0
max_timesteps = 2000
output_frequency = 10
output_format = VTK

fluid_model = SINGLE_COMPONENT
solid_model = ELASTIC

enable_geomechanics = false
enable_thermal = false

[GRID]
mesh_type = GMSH
mesh_file = meshes/historical/gnome_salt_3d.msh
use_unstructured = true

gmsh_material_mapping = salt_dome:ROCK_SALT

# ------------------------------------------------------------------------------
# Geographic coordinate handling (approximate location; for demonstration only)
# ------------------------------------------------------------------------------
input_crs = EPSG:4326
model_crs = EPSG:32613

use_local_coordinates = true
local_origin_x = -104.567
local_origin_y = 32.257
local_origin_z = 0.0

[ROCK_SALT]
name = Halite_Salt
porosity = 0.005
permeability_x = 1e-7 mD
permeability_y = 1e-7 mD
permeability_z = 1e-8 mD
youngs_modulus = 25 GPa
poisson_ratio = 0.30
density = 2160 kg/m3
biot_coefficient = 0.7

[FLUID]
type = SINGLE_PHASE
density = 1000 kg/m3
viscosity = 1.0 cP
compressibility = 4.5e-10 1/Pa

[WELL1]
name = GZ
type = OBSERVATION
x = -104.567
y = 32.257
z = -370.0
control_mode = BHP
target_value = 20.0 MPa

[OUTPUT]
format = VTK
path = output/historical_gnome_site
frequency = 10
pressure = true
displacement = false

