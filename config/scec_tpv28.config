# =============================================================================
# SCEC TPV28: T-Junction Fault Intersection
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv28docs.html
#
# Two faults meeting at a T-junction (perpendicular intersection).
# Tests rupture propagation across fault intersections.
# =============================================================================

[SIMULATION]
name = scec_tpv28
description = SCEC TPV28 - T-Junction Fault
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv28
output_format = HDF5

[GRID]
nx = 401
ny = 301
nz = 151
Lx = 40000.0
Ly = 30000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

# Main fault (horizontal, along x-axis)
[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 40000.0
width = 15000.0
center = 20000.0, 15000.0, 7500.0

friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

normal_stress = -120.0e6
shear_stress_along_strike = 70.0e6

nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 10000.0, 15000.0, 7500.0
nucleation_radius = 1500.0
nucleation_shear_stress = 81.6e6

# Perpendicular fault (T-junction, along y-axis)
[FAULT2]
name = perpendicular_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 90.0
dip = 90.0
x_position = 20000.0
y_start = 15000.0
y_end = 30000.0
width = 15000.0

friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

normal_stress = -120.0e6
shear_stress_along_strike = 65.0e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Receivers on main fault
[RECEIVER1]
type = FAULT
fault = main_fault
location = 5000.0, 15000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER2]
type = FAULT
fault = main_fault
location = 15000.0, 15000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER3]
type = FAULT
fault = main_fault
location = 25000.0, 15000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER4]
type = FAULT
fault = main_fault
location = 35000.0, 15000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

# Receivers on perpendicular fault
[RECEIVER5]
type = FAULT
fault = perpendicular_fault
location = 20000.0, 20000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER6]
type = FAULT
fault = perpendicular_fault
location = 20000.0, 25000.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[SOLVER]
method = EXPLICIT
cfl = 0.5
