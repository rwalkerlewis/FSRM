# =============================================================================
# SCEC TPV21: Shallow Dip-Slip - Rate-State Friction
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv20_21docs.html
#
# Same geometry as TPV20 but with rate-state friction.
# Tests rate-state behavior near free surface.
# =============================================================================

[SIMULATION]
name = scec_tpv21
description = SCEC TPV21 - Shallow Dip-Slip Rate-State
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.001
output_frequency = 100
output_dir = output/scec_tpv21
output_format = HDF5

[GRID]
nx = 301
ny = 201
nz = 101
Lx = 30000.0
Ly = 20000.0
Lz = 10000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = shallow_thrust
type = THRUST
geometry = PLANAR
strike = 0.0
dip = 30.0
length = 30000.0
width = 17320.5
surface_trace_y = 10000.0

# Rate-state friction
friction_model = RATE_STATE_AGING
reference_friction = 0.6
reference_velocity = 1.0e-6
direct_effect_a = 0.008
evolution_effect_b = 0.012
state_evolution_distance = 0.02

# Initial stress
normal_stress = -100.0e6
shear_stress_along_dip = 50.0e6

# Nucleation
nucleation_type = TIME_WEAKENING
nucleation_center = 15000.0, 10000.0, 8000.0
nucleation_radius = 3000.0
nucleation_time = 0.5

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Surface receivers (hanging wall)
[RECEIVER1]
type = BODY
location = 15000.0, 12000.0, 0.0
output_fields = velocity, displacement

[RECEIVER2]
type = BODY
location = 15000.0, 14000.0, 0.0
output_fields = velocity, displacement

# Surface receivers (footwall)
[RECEIVER3]
type = BODY
location = 15000.0, 8000.0, 0.0
output_fields = velocity, displacement

[RECEIVER4]
type = BODY
location = 15000.0, 6000.0, 0.0
output_fields = velocity, displacement

# On-fault receivers
[RECEIVER5]
type = FAULT
location = 15000.0, 10000.0, 3000.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER6]
type = FAULT
location = 15000.0, 10000.0, 6000.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER7]
type = FAULT
location = 15000.0, 10000.0, 8000.0
output_fields = slip, slip_rate, shear_stress, state_variable

[SOLVER]
method = EXPLICIT
cfl = 0.5
