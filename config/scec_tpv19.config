# =============================================================================
# SCEC TPV19: Self-Healing Slip Pulse
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv19docs.html
#
# Produces a self-healing slip pulse rather than crack-like rupture.
# Uses strongly rate-weakening friction to create pulse-like behavior.
# =============================================================================

[SIMULATION]
name = scec_tpv19
description = SCEC TPV19 - Self-Healing Pulse
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 15.0
dt = 0.001
output_frequency = 100
output_dir = output/scec_tpv19
output_format = HDF5

[GRID]
nx = 401
ny = 151
nz = 151
Lx = 40000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 40000.0
width = 15000.0
center = 20000.0, 0.0, 7500.0

# Strong rate-weakening friction for self-healing behavior
friction_model = RATE_STATE_STRONG_WEAKENING
reference_friction = 0.6
reference_velocity = 1.0e-6
direct_effect_a = 0.008
evolution_effect_b = 0.016
state_evolution_distance = 0.02

# Enable flash heating for strong velocity weakening
flash_heating = true
flash_heating_temperature = 1200.0
weakening_velocity = 0.1

# Initial stress
normal_stress = -120.0e6
shear_stress_along_strike = 70.0e6

# Nucleation
nucleation_type = TIME_WEAKENING
nucleation_center = 10000.0, 0.0, 7500.0
nucleation_radius = 3000.0
nucleation_time = 0.5

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Receivers to track pulse propagation and healing
[RECEIVER1]
type = FAULT
location = 10000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER2]
type = FAULT
location = 15000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER3]
type = FAULT
location = 20000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER4]
type = FAULT
location = 25000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[RECEIVER5]
type = FAULT
location = 30000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress, state_variable

[SOLVER]
method = EXPLICIT
cfl = 0.5
