# =============================================================================
# SCEC TPV25 Benchmark Configuration
# Japan Benchmark with Rate-State Friction (Heterogeneous Stress)
# =============================================================================
#
# Reference: SCEC-Japan Collaborative Benchmark
#            https://strike.scec.org/cvws/tpv24_25docs.html
#
# Same as TPV24 but with heterogeneous initial stress field
#
# =============================================================================

[SIMULATION]
name = scec_tpv25
description = SCEC TPV25 - Japan Benchmark (Heterogeneous)
dimension = 3
physics = ELASTODYNAMICS
solid_model = ELASTIC

start_time = 0.0
end_time = 15.0
dt_initial = 0.0002
dt_min = 1.0e-8
dt_max = 0.002
adaptive_timestepping = true
cfl_number = 0.3

output_dir = output/scec_tpv25
output_format = HDF5
output_frequency = 500

[GRID]
nx = 400
ny = 400
nz = 200
Lx = 80000.0
Ly = 80000.0
Lz = 40000.0

[ROCK]
density = 2700.0
p_wave_velocity = 5770.0
s_wave_velocity = 3333.0
shear_modulus = 30.0e9

[FAULT1]
name = main_fault
type = STRIKE_SLIP

x = 40000.0
y = 40000.0
z = -10000.0
strike = 0.0
dip = 90.0
length = 40000.0
width = 20000.0

friction_law = STRONG_VELOCITY_WEAKENING
static_friction = 0.76
dynamic_friction = 0.10
slip_weakening_dc = 0.50
reference_velocity = 1.0e-6
weakening_velocity = 0.17

enable_flash_heating = true
flash_heating_fw = 0.10
flash_heating_vw = 0.17

# Heterogeneous stress field
initial_stress_type = HETEROGENEOUS
initial_stress_file = data/tpv25_stress.dat
# Or specify stress distribution
stress_perturbation_amplitude = 5.0e6
stress_perturbation_wavelength = 5000.0

nucleation_type = TIME_WEAKENING
nucleation_center_x = 40000.0
nucleation_center_z = -10000.0
nucleation_radius = 3000.0

[BC1]
type = FREE_SURFACE
location = ZMAX

[BC2]
type = ABSORBING
location = XMIN
method = PML
pml_thickness = 4000.0

[BC3]
type = ABSORBING
location = XMAX
method = PML
pml_thickness = 4000.0

[BC4]
type = ABSORBING
location = YMIN
method = PML
pml_thickness = 4000.0

[BC5]
type = ABSORBING
location = YMAX
method = PML
pml_thickness = 4000.0

[BC6]
type = ABSORBING
location = ZMIN
method = PML
pml_thickness = 4000.0

[SOLVER]
method = EXPLICIT
time_integration = ADER_DG
polynomial_order = 5
