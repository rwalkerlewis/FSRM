# =============================================================================
# US Project Gasbuggy - Nuclear Reservoir Stimulation
# =============================================================================
#
# Models the US Project Plowshare approach to nuclear gas stimulation,
# specifically the Project Gasbuggy experiment (December 10, 1967).
#
# Project Gasbuggy Details:
# - Location: Rio Arriba County, New Mexico, USA
# - Yield: 29 kilotons
# - Depth: 1,292 meters (4,240 feet)
# - Formation: Pictured Cliffs Sandstone (tight gas)
# - Purpose: Stimulate low-permeability gas reservoir
# - Result: Successful but high tritium contamination
#
# US Philosophy (vs Soviet):
# - Single large yields with rigorous containment
# - Extensive pre-shot geological/hydrological studies
# - Detailed radiation monitoring and safety analysis
# - Shot placement to avoid pay zone contamination
# - Focus on fracture network rather than cavity
# - Public transparency and environmental concerns
# - Ultimately abandoned due to radioactivity issues
#
# =============================================================================

[SIMULATION]
name = project_gasbuggy
description = US Project Plowshare nuclear gas well stimulation (Gasbuggy, 1967)

# Time parameters
start_time = 0.0
end_time = 63072000.0              # 2 years post-detonation
dt_initial = 0.0001                # 100 microseconds
dt_min = 1.0e-7
dt_max = 86400.0
max_timesteps = 100000

output_frequency = 50
output_format = HDF5
enable_checkpointing = true
checkpoint_frequency = 500

rtol = 1.0e-5                      # Tighter than Soviet
atol = 1.0e-8
max_nonlinear_iterations = 150
max_linear_iterations = 8000

# Physics models
fluid_model = SINGLE_COMPONENT      # Natural gas (CH4)
solid_model = ELASTOPLASTIC

enable_geomechanics = true
enable_thermal = true
enable_fractures = true
enable_explosion_source = true
enable_radiation_transport = true   # US requirement!
enable_cavity_formation = true
enable_radioactive_decay = true
adaptive_timestepping = true

[GRID]
# Large domain for US safety requirements
nx = 250
ny = 250
nz = 120

# 5 km x 5 km x 2.4 km domain  
Lx = 5000.0
Ly = 5000.0
Lz = 2400.0

use_unstructured = false

# =============================================================================
# Nuclear Explosion Source (Project Gasbuggy parameters)
# =============================================================================
[EXPLOSION]
yield = 29.0                       # kilotons (actual Gasbuggy yield)
yield_units = kt

# Detonation point (Pictured Cliffs Sandstone)
x = 2500.0                         # Domain center
y = 2500.0
depth = 1292.0                     # Actual Gasbuggy depth (4,240 ft)

# Energy partition (US contained nuclear shot)
thermal_fraction = 0.35            # 35% thermal (lower than Soviet)
kinetic_fraction = 0.50            # 50% shock/blast (US emphasis)
seismic_fraction = 0.15            # 15% seismic (shallow + US safety)

rise_time = 5.0e-7                 # 500 nanoseconds (fast US device)
duration = 5.0e-4                  # 500 microseconds

peak_temperature = 5.0e6           # 5 million K
peak_pressure = 5.0e11             # 500 GPa
vaporization_radius = 12.0         # 12 m (smaller than Soviet)

[CAVITY]
# US Gasbuggy cavity characteristics
formation_model = BOARDMAN          # US empirical scaling
cavity_radius_scaling = 70.0        # R = 70 * W^(1/3), more conservative
                                    # For 29 kt: R ≈ 210 m (observed: 79m radius)

chimney_height_ratio = 4.0          # Higher chimney (US observations)
rubble_porosity = 0.30              # 30% (US measurements)
rubble_permeability = 5000.0        # 5 Darcy - lower than Soviet
compaction_time = 7200.0            # 2 hours (slower US settling)

collapse_model = DELAYED            # US shots collapsed more slowly
collapse_delay = 3600.0             # 1 hour
bulking_factor = 1.20               # 20% volume increase

# Gasbuggy actual measurements
measured_cavity_radius = 79.0       # Measured by post-shot drilling
measured_chimney_height = 335.0     # meters

# =============================================================================
# Reservoir Properties (Pictured Cliffs Sandstone, San Juan Basin)
# =============================================================================
[ROCK]
# Pre-shot formation (tight gas sandstone)
porosity = 0.11                     # 11% - very tight
permeability_x = 0.005              # 0.005 mD - extremely low
permeability_y = 0.005
permeability_z = 0.002              # Highly anisotropic

density = 2450.0                    # kg/m³
compressibility = 3.0e-10           # 1/Pa

# Mechanical properties (sandstone)
youngs_modulus = 30.0e9             # 30 GPa (stiffer than Soviet)
poissons_ratio = 0.20               # Lower than typical
shear_modulus = 12.5e9              # 12.5 GPa
bulk_modulus = 16.7e9               # 16.7 GPa

# Thermal properties
thermal_conductivity = 3.0          # W/(m·K) - higher than Soviet
specific_heat = 900.0               # J/(kg·K)
thermal_expansion = 8.0e-6          # 1/K

# Failure criteria
tensile_strength = 8.0e6            # 8 MPa (stronger sandstone)
cohesion = 15.0e6                   # 15 MPa
friction_angle = 35.0               # degrees
dilation_angle = 5.0                # degrees (less dilation)

# Enhanced zone (more conservative than Soviet)
enhanced_permeability_factor = 50.0   # 50x increase
enhanced_porosity_increase = 0.03     # +3% absolute

[FLUID]
type = SINGLE_PHASE
fluid_type = NATURAL_GAS

# Gas properties (CO2-rich San Juan Basin gas)
density = 180.0                     # kg/m³
viscosity = 0.000018                # Pa·s
compressibility = 1.2e-8            # 1/Pa

reference_pressure = 15.0e6         # 15 MPa (lower than Soviet)
reference_temperature = 320.0       # 320 K (47°C)

# Composition (measured Gasbuggy)
methane_fraction = 0.85             # 85% CH4
co2_fraction = 0.10                 # 10% CO2
nitrogen_fraction = 0.05            # 5% N2

gas_constant = 520.0                # J/(kg·K)
molecular_weight = 0.018            # kg/mol

[INITIAL_CONDITIONS]
initial_pressure = 15.0e6           # 15 MPa
initial_temperature = 320.0         # 320 K
initial_saturation = 1.0

# In-situ stress (1.29 km depth)
vertical_stress = 31.0e6            # σv = 31 MPa
horizontal_stress_max = 28.0e6      # σH (normal faulting)
horizontal_stress_min = 24.0e6      # σh
stress_regime = NORMAL              # σv > σH > σh

[BOUNDARY_CONDITIONS]
bc_z_min_type = DIRICHLET
bc_z_min_displacement = 0.0
bc_z_min_pressure = 15.0e6

bc_z_max_type = NEUMANN
bc_z_max_traction = -31.0e6

bc_x_min_type = NEUMANN
bc_x_max_type = NEUMANN
bc_y_min_type = NEUMANN
bc_y_max_type = NEUMANN

[PRODUCTION_WELL]
# Gasbuggy GB-ER reentry well
name = GB_ER
type = PRODUCER
location_type = CAVITY_INTERSECTING

x = 2500.0
y = 2500.0  
z_top = 1100.0
z_bottom = 1500.0

# Production started 5 months post-shot (US caution)
start_time = 12960000.0             # 150 days
control_mode = RATE                 # Controlled rate (US approach)
target_rate = 70000.0               # 70,000 m³/day (actual Gasbuggy rate)
max_bhp = 1.0e6                     # 1 MPa minimum BHP

[FRACTURE_NETWORK]
# US-style fracture enhancement
enable_enhanced_fractures = true

# Less extensive than Soviet (US approach)
num_radial_fractures = 16           # Fewer but larger
fracture_length = 400.0             # 400 m
fracture_height = 350.0             # 350 m
fracture_aperture = 0.0015          # 1.5 mm
fracture_permeability = 800.0       # 0.8 Darcy

stress_threshold = 0.85             # More conservative
fracture_toughness = 1.5e6          # Pa√m

# =============================================================================
# Radiation Transport and Contamination (US Focus)
# =============================================================================
[RADIATION]
enable_radiation_tracking = true
enable_radioactive_decay = true
enable_tritium_transport = true
enable_fission_product_tracking = true

# Initial radioactive inventory (Gasbuggy device)
total_fission_yield = 0.29          # Mt (1% of total yield)
fusion_yield = 28.71                # Mt (99% of yield)

# Key isotopes (measured in Gasbuggy gas)
tritium_initial = 1.5e15            # Bq (major concern!)
tritium_halflife = 12.32            # years
krypton85_initial = 5.0e13          # Bq
krypton85_halflife = 10.76          # years
carbon14_initial = 1.0e12           # Bq
carbon14_halflife = 5730.0          # years

# Transport properties
tritium_diffusion = 1.0e-9          # m²/s
tritium_partitioning = GAS          # Tritium stays in gas phase

# US Safety limits
tritium_limit_commercial = 740.0    # Bq/m³ (US limit)
tritium_limit_drinking_water = 20.0 # Bq/L

# Measured Gasbuggy contamination
measured_tritium_peak = 1.0e6       # Bq/m³ (1350x limit!)
measured_krypton85 = 5.0e4          # Bq/m³

# Containment verification (US requirement)
containment_verification = true
verification_wells = 4              # GB-1, GB-2, GB-3, GB-D

[MONITORING]
# Extensive US monitoring program
enable_seismic_monitoring = true
enable_radiation_monitoring = true
enable_groundwater_monitoring = true
enable_gas_composition_analysis = true

# Monitoring network
seismic_stations = 12
radiation_detectors = 8
groundwater_wells = 6
gas_sampling_frequency = 86400.0    # Daily

# US reporting requirements
report_to_aec = true                # Atomic Energy Commission
public_reporting = true
environmental_impact_assessment = true

[OUTPUT]
output_variables = PRESSURE, TEMPERATURE, DISPLACEMENT, STRESS, DAMAGE, POROSITY, PERMEABILITY, TRITIUM_CONCENTRATION, RADIATION_DOSE
output_cavity_evolution = true
output_fracture_network = true
output_production_history = true
output_radiation_transport = true

# Detailed time snapshots
snapshot_times = 0.0, 0.001, 0.01, 0.1, 1.0, 3600.0, 86400.0, 604800.0, 2592000.0, 12960000.0, 31536000.0, 63072000.0

[ANALYSIS]
# US-style analysis and reporting
compute_stimulation_ratio = true
compute_cavity_volume = true
compute_permeability_enhancement = true
compute_drainage_radius = true
compute_tritium_contamination = true
compute_gas_quality = true
compute_economic_viability = true

# Historical Gasbuggy results:
# - Cavity volume: ~1.73 million cubic feet
# - Production increase: 4x pre-shot (less than Soviet)
# - Peak rate: 70,000 m³/day (declining rapidly)
# - Major problem: Tritium 1350x above commercial limits
# - Economic conclusion: Not viable due to contamination
# - Program outcome: Project Plowshare terminated 1977

# Key difference from Soviet approach:
# US: Safety and environment first → program cancelled
# USSR: Economic benefit first → continued until 1988

[NOTES]
# Project Gasbuggy Legacy:
# 
# Success: Demonstrated nuclear stimulation technically feasible
# Failure: Radioactive contamination made gas unmarketable
# 
# Follow-up projects:
# - Rulison (1969): 40 kt, Colorado
# - Rio Blanco (1973): 3x33 kt, Colorado
# 
# All US nuclear stimulation projects ultimately abandoned due to:
# 1. Tritium contamination above commercial limits
# 2. Public opposition and environmental concerns
# 3. Economic non-viability with contaminated product
# 4. Advances in conventional hydraulic fracturing
#
# Soviet program continued longer due to:
# 1. Less stringent safety/environmental standards
# 2. State-controlled economy (no market for gas)
# 3. Remote locations with minimal public oversight
# 4. Success in some applications (Urta-Bulak)
