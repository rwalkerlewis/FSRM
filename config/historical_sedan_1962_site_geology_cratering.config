# ==============================================================================
# Historical-inspired Example: Sedan (1962) - NTS Cratering Test (Site Model)
# ==============================================================================
# What this example focuses on:
# - **Geology**: simplified near-surface stratigraphy (alluvium over volcanic tuff)
#   represented via a small Gmsh mesh with two physical volumes.
# - **Geography**: WGS84 (lon/lat) coordinates with UTM Zone 11N model CRS,
#   optionally centered on Ground Zero.
#
# Mesh:
#   meshes/historical/sedan_layered_3d.msh
# Physical volumes:
#   - "alluvium"
#   - "tuff"
# ==============================================================================

[SIMULATION]
name = historical_sedan_1962_site_geology
description = Sedan-inspired NTS site geology (alluvium+tuff) with CRS handling

start_time = 0.0
end_time = 86400.0
dt_initial = 3600.0
dt_min = 60.0
dt_max = 21600.0
max_timesteps = 2000
output_frequency = 10
output_format = VTK

fluid_model = SINGLE_COMPONENT
solid_model = ELASTIC
enable_geomechanics = false
enable_thermal = false

[GRID]
mesh_type = GMSH
mesh_file = meshes/historical/sedan_layered_3d.msh
use_unstructured = true

gmsh_material_mapping = alluvium:ROCK_ALLUVIUM, tuff:ROCK_TUFF

# ------------------------------------------------------------------------------
# Geographic coordinate handling (approximate; for demonstration only)
# ------------------------------------------------------------------------------
input_crs = EPSG:4326
model_crs = EPSG:32611
use_local_coordinates = true
local_origin_x = -116.050
local_origin_y = 37.176
local_origin_z = 0.0

[ROCK_ALLUVIUM]
name = NTS_Alluvium
porosity = 0.20
permeability_x = 1 mD
permeability_y = 1 mD
permeability_z = 0.1 mD
youngs_modulus = 0.8 GPa
poisson_ratio = 0.35
density = 1800 kg/m3
biot_coefficient = 0.95

[ROCK_TUFF]
name = Volcanic_Tuff
porosity = 0.12
permeability_x = 0.01 mD
permeability_y = 0.01 mD
permeability_z = 0.001 mD
youngs_modulus = 8 GPa
poisson_ratio = 0.28
density = 2200 kg/m3
biot_coefficient = 0.85

[FLUID]
type = SINGLE_PHASE
density = 1000 kg/m3
viscosity = 1.0 cP
compressibility = 4.5e-10 1/Pa

[WELL1]
name = GZ
type = OBSERVATION
x = -116.050
y = 37.176
z = -194.0
control_mode = BHP
target_value = 10.0 MPa

[OUTPUT]
format = VTK
path = output/historical_sedan_site
frequency = 10
pressure = true
displacement = false

