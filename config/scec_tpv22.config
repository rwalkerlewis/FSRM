# =============================================================================
# SCEC TPV22: Strike-Slip Bilateral Rupture - Slip-Weakening
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv22_23docs.html
#
# Bilateral strike-slip rupture with slip-weakening friction.
# Tests symmetric rupture propagation from hypocenter.
# =============================================================================

[SIMULATION]
name = scec_tpv22
description = SCEC TPV22 - Bilateral Strike-Slip
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv22
output_format = HDF5

[GRID]
nx = 401
ny = 151
nz = 151
Lx = 40000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 40000.0
width = 15000.0
center = 20000.0, 0.0, 7500.0

# Slip-weakening friction
friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

# Initial stress
normal_stress = -120.0e6
shear_stress_along_strike = 70.0e6

# Centered nucleation for bilateral rupture
nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 20000.0, 0.0, 7500.0
nucleation_radius = 1500.0
nucleation_shear_stress = 81.6e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Receivers - symmetric about hypocenter
[RECEIVER1]
type = FAULT
location = 10000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER2]
type = FAULT
location = 15000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER3]
type = FAULT
location = 20000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER4]
type = FAULT
location = 25000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER5]
type = FAULT
location = 30000.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

# Surface receivers
[RECEIVER6]
type = BODY
location = 20000.0, 3000.0, 0.0
output_fields = velocity, displacement

[RECEIVER7]
type = BODY
location = 20000.0, -3000.0, 0.0
output_fields = velocity, displacement

[SOLVER]
method = EXPLICIT
cfl = 0.5
