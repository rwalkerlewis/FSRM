# =============================================================================
# SCEC TPV18: Layered Medium
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv18docs.html
#
# Dynamic rupture in a layered elastic medium.
# Tests wave propagation and rupture behavior across material interfaces.
# =============================================================================

[SIMULATION]
name = scec_tpv18
description = SCEC TPV18 - Layered Medium
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv18
output_format = HDF5

[GRID]
nx = 301
ny = 151
nz = 151
Lx = 30000.0
Ly = 15000.0
Lz = 15000.0
dx = 100.0
dy = 100.0
dz = 100.0

# Layered material structure
[MATERIAL]
type = LAYERED

# Layer 1: Shallow layer (0-3 km depth)
[LAYER1]
z_top = 0.0
z_bottom = 3000.0
density = 2200.0
vp = 4000.0
vs = 2309.0

# Layer 2: Intermediate layer (3-6 km)
[LAYER2]
z_top = 3000.0
z_bottom = 6000.0
density = 2500.0
vp = 5000.0
vs = 2886.0

# Layer 3: Deep half-space (6+ km)
[LAYER3]
z_top = 6000.0
z_bottom = 15000.0
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 30000.0
width = 15000.0
center = 15000.0, 0.0, 7500.0

friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

normal_stress = -120.0e6
shear_stress_along_strike = 70.0e6

nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 15000.0, 0.0, 10000.0
nucleation_radius = 1500.0
nucleation_shear_stress = 81.6e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Receivers at different depths
[RECEIVER1]
type = FAULT
location = 0.0, 0.0, 1500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER2]
type = FAULT
location = 0.0, 0.0, 4500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER3]
type = FAULT
location = 0.0, 0.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER4]
type = FAULT
location = 0.0, 0.0, 10500.0
output_fields = slip, slip_rate, shear_stress

# Surface receivers
[RECEIVER5]
type = BODY
location = 0.0, 3000.0, 0.0
output_fields = velocity, displacement

[RECEIVER6]
type = BODY
location = 0.0, -3000.0, 0.0
output_fields = velocity, displacement

[SOLVER]
method = EXPLICIT
cfl = 0.5
