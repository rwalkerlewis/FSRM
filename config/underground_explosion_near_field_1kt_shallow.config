# ==============================================================================
# Near-Field Underground Explosion (1 kt, Shallow) - for `underground_explosion_near_field`
# ==============================================================================
# This config is parsed by `NearFieldExplosionConfig` (see `NearFieldExplosion.cpp`):
# - Any `key = value` lines are read (section headers are ignored).
# - Unknown keys are ignored safely.
#
# Usage:
#   ./underground_explosion_near_field config/underground_explosion_near_field_1kt_shallow.config
# ==============================================================================

[EXPLOSION_SOURCE]
yield_kt = 1.0
depth_of_burial = 200.0
source_x = 0.0
source_y = 0.0

# Host rock (granite-like)
[HOST_ROCK]
host_density = 2650.0
p_wave_velocity = 5500.0
s_wave_velocity = 3200.0
porosity = 0.01

[HOST_ROCK.EOS]
bulk_sound_speed = 4500.0
hugoniot_slope = 1.4
gruneisen_gamma = 1.5
gruneisen_a = 0.5

[HOST_ROCK.STRENGTH]
cohesion = 50.0e6
pressure_coefficient = 0.5
pressure_exponent = 0.5
tension_coefficient = 5.0
max_strength = 2.0e9
residual_strength = 0.1e6
softening_strain = 0.05
residual_strength_ratio = 0.1

[DAMAGE]
damage_strain_threshold = 0.001
damage_strain_saturation = 0.10
damage_pressure_threshold = 1.0e9
damage_pressure_saturation = 10.0e9
tensile_damage_threshold = 5.0e6
damage_rate = 10.0
max_damage = 0.99

