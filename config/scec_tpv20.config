# =============================================================================
# SCEC TPV20: Shallow Dip-Slip - Slip-Weakening Friction
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv20_21docs.html
#
# Shallow dipping thrust fault reaching the free surface.
# Tests surface rupture and near-field ground motion.
# =============================================================================

[SIMULATION]
name = scec_tpv20
description = SCEC TPV20 - Shallow Dip-Slip
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 12.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv20
output_format = HDF5

[GRID]
nx = 301
ny = 201
nz = 101
Lx = 30000.0
Ly = 20000.0
Lz = 10000.0
dx = 100.0
dy = 100.0
dz = 100.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = shallow_thrust
type = THRUST
geometry = PLANAR
strike = 0.0
dip = 30.0
length = 30000.0
width = 17320.5
surface_trace_y = 10000.0

# Slip-weakening friction
friction_model = SLIP_WEAKENING
static_friction = 0.60
dynamic_friction = 0.20
Dc = 0.50

# Initial stress
normal_stress = -100.0e6
shear_stress_along_dip = 45.0e6

# Nucleation at depth
nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 15000.0, 10000.0, 8000.0
nucleation_radius = 1500.0
nucleation_shear_stress = 62.0e6

[BC1]
type = FREE_SURFACE
location = ZMIN

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Surface receivers (hanging wall)
[RECEIVER1]
type = BODY
location = 15000.0, 12000.0, 0.0
output_fields = velocity, displacement

[RECEIVER2]
type = BODY
location = 15000.0, 14000.0, 0.0
output_fields = velocity, displacement

[RECEIVER3]
type = BODY
location = 15000.0, 16000.0, 0.0
output_fields = velocity, displacement

# Surface receivers (footwall)
[RECEIVER4]
type = BODY
location = 15000.0, 8000.0, 0.0
output_fields = velocity, displacement

[RECEIVER5]
type = BODY
location = 15000.0, 6000.0, 0.0
output_fields = velocity, displacement

# On-fault receivers
[RECEIVER6]
type = FAULT
location = 15000.0, 10000.0, 5000.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER7]
type = FAULT
location = 15000.0, 10000.0, 8000.0
output_fields = slip, slip_rate, shear_stress

[SOLVER]
method = EXPLICIT
cfl = 0.5
