# Single-Phase Flow Example
# Demonstrates basic Darcy flow with injection/production wells

[SIMULATION]
name = single_phase_flow
start_time = 0.0
end_time = 86400.0              # 24 hours (seconds)
dt_initial = 3600.0             # 1 hour
dt_min = 60.0
dt_max = 7200.0
output_frequency = 10
output_format = HDF5            # HDF5 (default), VTK (secondary)
fluid_model = SINGLE_COMPONENT
solid_model = ELASTIC
enable_geomechanics = false
enable_thermal = false
enable_fractures = false
enable_faults = false
rtol = 1.0e-6
atol = 1.0e-8
max_nonlinear_iterations = 50

[GRID]
nx = 20
ny = 20
nz = 5
Lx = 1000.0                     # 1 km
Ly = 1000.0                     # 1 km
Lz = 50.0                       # 50 m

[ROCK]
porosity = 0.20
permeability_x = 100.0          # mD
permeability_y = 100.0          # mD
permeability_z = 10.0           # mD
density = 2650.0                # kg/m³
compressibility = 1.0e-9        # 1/Pa

[FLUID]
type = SINGLE_PHASE
density = 1000.0                # kg/m³
viscosity = 0.001               # Pa·s
compressibility = 4.5e-10       # 1/Pa
reference_pressure = 20.0e6     # Pa

[WELL1]
name = PROD1
type = PRODUCER
i = 10                          # Grid center
j = 10
k = 2
control_mode = RATE
target_value = 0.00116          # 100 m³/day in m³/s
min_bhp = 10.0e6

[WELL2]
name = INJ1
type = INJECTOR
i = 2                           # Corner
j = 2
k = 2
control_mode = RATE
target_value = 0.00174          # 150 m³/day in m³/s
max_bhp = 35.0e6

[IC1]
field = PRESSURE
distribution = UNIFORM
value = 20.0e6                  # 20 MPa

[BC1]
type = NEUMANN
field = PRESSURE
location = ALL
value = 0.0                     # No-flow

[OUTPUT]
format = VTK
path = output/single_phase
frequency = 4
pressure = true
saturation = false
