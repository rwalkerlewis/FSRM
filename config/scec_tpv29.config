# =============================================================================
# SCEC TPV29: Free Surface with Topography
# =============================================================================
# Reference: https://strike.scec.org/cvws/tpv29docs.html
#
# Dynamic rupture with non-planar free surface (topography).
# Tests effects of surface topography on rupture and ground motion.
# =============================================================================

[SIMULATION]
name = scec_tpv29
description = SCEC TPV29 - Topography
dimension = 3
physics = ELASTODYNAMICS
time_integration = EXPLICIT

start_time = 0.0
end_time = 15.0
dt = 0.002
output_frequency = 50
output_dir = output/scec_tpv29
output_format = HDF5

[GRID]
type = CURVILINEAR
nx = 301
ny = 151
nz = 101
Lx = 30000.0
Ly = 15000.0
Lz = 10000.0

# Topography specification
topography_model = GAUSSIAN_HILL
hill_center = 15000.0, 7500.0
hill_height = 500.0
hill_width_x = 3000.0
hill_width_y = 3000.0

[MATERIAL]
type = ELASTIC_HOMOGENEOUS
density = 2670.0
vp = 6000.0
vs = 3464.0

[FAULT1]
name = main_fault
type = STRIKE_SLIP
geometry = PLANAR
strike = 0.0
dip = 90.0
length = 30000.0
width = 10000.0
center = 15000.0, 7500.0, 5000.0

friction_model = SLIP_WEAKENING
static_friction = 0.677
dynamic_friction = 0.525
Dc = 0.40

normal_stress = -120.0e6
shear_stress_along_strike = 70.0e6

nucleation_type = OVERSTRESSED_PATCH
nucleation_center = 15000.0, 7500.0, 7500.0
nucleation_radius = 1500.0
nucleation_shear_stress = 81.6e6

[BC1]
type = FREE_SURFACE
location = ZMIN
curved = true

[BC2]
type = ABSORBING
location = XMIN

[BC3]
type = ABSORBING
location = XMAX

[BC4]
type = ABSORBING
location = YMIN

[BC5]
type = ABSORBING
location = YMAX

[BC6]
type = ABSORBING
location = ZMAX

# Surface receivers at topography
[RECEIVER1]
type = BODY
location = 15000.0, 7500.0, SURFACE
output_fields = velocity, displacement

[RECEIVER2]
type = BODY
location = 12000.0, 7500.0, SURFACE
output_fields = velocity, displacement

[RECEIVER3]
type = BODY
location = 18000.0, 7500.0, SURFACE
output_fields = velocity, displacement

[RECEIVER4]
type = BODY
location = 15000.0, 4500.0, SURFACE
output_fields = velocity, displacement

[RECEIVER5]
type = BODY
location = 15000.0, 10500.0, SURFACE
output_fields = velocity, displacement

# On-fault receivers
[RECEIVER6]
type = FAULT
location = 15000.0, 7500.0, 5000.0
output_fields = slip, slip_rate, shear_stress

[RECEIVER7]
type = FAULT
location = 15000.0, 7500.0, 7500.0
output_fields = slip, slip_rate, shear_stress

[SOLVER]
method = EXPLICIT
cfl = 0.5
